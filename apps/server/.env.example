# ===========================================
# FlowStack Server - Local Development
# ===========================================

# Server
PORT=8787
NODE_ENV=development

# Auth - Better Auth
BETTER_AUTH_URL=http://localhost:8787
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long-change-this
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/flowstack

# Email - ZeptoMail (optional)
ZEPTOMAIL_API_KEY=
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=FlowStack

# CORS (comma-separated origins, optional)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
DOMAIN=localhost

# OAuth - Google (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Storage - Cloudflare R2 (required)
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://your-public-domain.com

# Skip validation during build (optional)
# SKIP_ENV_VALIDATION=true
