# ===========================================
# FlowStack Server - Beta Environment
# ===========================================
# Copy this file to .env.beta and update values

# Server
PORT=8787
NODE_ENV=production

# Auth - Better Auth
BETTER_AUTH_URL=https://api-beta.flowstack.example.com
BETTER_AUTH_SECRET=your-beta-secret-key-min-32-characters-long-change-this
FRONTEND_URL=https://beta.flowstack.example.com

# Database - Update with beta database URL
DATABASE_URL=postgresql://user:password@beta-db-host:5432/flowstack_beta

# Email - ZeptoMail
ZEPTOMAIL_API_KEY=your-beta-zeptomail-api-key
EMAIL_FROM_ADDRESS=noreply@beta.flowstack.example.com
EMAIL_FROM_NAME=FlowStack Beta

# CORS - Update with actual beta domain
ALLOWED_ORIGINS=https://beta.flowstack.example.com
DOMAIN=beta.flowstack.example.com

# OAuth - Google
GOOGLE_CLIENT_ID=your-beta-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-beta-google-client-secret

# Storage - Cloudflare R2
R2_ACCESS_KEY_ID=your-beta-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-beta-r2-secret-access-key
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=flowstack-beta
R2_PUBLIC_URL=https://cdn-beta.flowstack.example.com

# Skip validation during build (optional)
# SKIP_ENV_VALIDATION=true
