# ===========================================
# FlowStack Server - Production Environment
# ===========================================
# Copy this file to .env.prod and update values

# Server
PORT=8787
NODE_ENV=production

# Auth - Better Auth
BETTER_AUTH_URL=https://api.flowstack.example.com
BETTER_AUTH_SECRET=your-production-secret-key-min-32-characters-long-change-this
FRONTEND_URL=https://flowstack.example.com

# Database - Update with production database URL
DATABASE_URL=postgresql://user:password@prod-db-host:5432/flowstack_prod

# Email - ZeptoMail
ZEPTOMAIL_API_KEY=your-production-zeptomail-api-key
EMAIL_FROM_ADDRESS=noreply@flowstack.example.com
EMAIL_FROM_NAME=FlowStack

# CORS - Update with actual production domain
ALLOWED_ORIGINS=https://flowstack.example.com
DOMAIN=flowstack.example.com

# OAuth - Google
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Storage - Cloudflare R2 (required)
R2_ACCESS_KEY_ID=your-production-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-production-r2-secret-access-key
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=flowstack-production
R2_PUBLIC_URL=https://cdn.flowstack.example.com

# Skip validation during build (optional)
# SKIP_ENV_VALIDATION=true
