# ===========================================
# FlowStack Server - Sandbox Environment
# ===========================================
# Copy this file to .env.sandbox and update values

# Server
PORT=8787
NODE_ENV=production

# Auth - Better Auth
BETTER_AUTH_URL=https://api-sandbox.flowstack.example.com
BETTER_AUTH_SECRET=your-sandbox-secret-key-min-32-characters-long-change-this
FRONTEND_URL=https://sandbox.flowstack.example.com

# Database - Update with sandbox database URL
DATABASE_URL=postgresql://user:password@sandbox-db-host:5432/flowstack_sandbox

# Email - ZeptoMail
ZEPTOMAIL_API_KEY=your-sandbox-zeptomail-api-key
EMAIL_FROM_ADDRESS=noreply@sandbox.flowstack.example.com
EMAIL_FROM_NAME=FlowStack Sandbox

# CORS - Update with actual sandbox domain
ALLOWED_ORIGINS=https://sandbox.flowstack.example.com
DOMAIN=sandbox.flowstack.example.com

# OAuth - Google
GOOGLE_CLIENT_ID=your-sandbox-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-sandbox-google-client-secret

# Storage - Cloudflare R2
R2_ACCESS_KEY_ID=your-sandbox-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-sandbox-r2-secret-access-key
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_BUCKET_NAME=flowstack-sandbox
R2_PUBLIC_URL=https://cdn-sandbox.flowstack.example.com

# Skip validation during build (optional)
# SKIP_ENV_VALIDATION=true
