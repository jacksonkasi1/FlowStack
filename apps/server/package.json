    "@repo/logs": "workspace:*",
    "@repo/config": "workspace:*",
    "@repo/storage": "workspace:*",
    "@t3-oss/env-core": "^0.13.10",
    "hono": "^4.11.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "^22",
    "prettier": "^3.8.0",
    "typescript": "^5.7.2"
  }
}