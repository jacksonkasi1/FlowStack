  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "tsc",
    "lint": "eslint src",
    "format": "prettier --write .",
    "check": "prettier --write . && eslint --fix",
    "check-types": "tsc --noEmit",
    "deploy:prod": "./.deploy/scripts/deploy.sh prod",
    "deploy:beta": "./.deploy/scripts/deploy.sh beta",
    "deploy:sandbox": "./.deploy/scripts/deploy.sh sandbox"
